<configuration>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5level [%thread] %logger{36}:%L - %msg%n
"/>
    <appender name="Console-Appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <springProfile name="dev">
        <appender name="File-Appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/booktracker-dev.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/booktracker-dev-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>3</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>
        <logger name="com.srjupi.booktracker" level="DEBUG" additivity="false">
            <appender-ref ref="Console-Appender"/>
            <appender-ref ref="File-Appender"/>
        </logger>
        <root level="WARN">
            <appender-ref ref="Console-Appender"/>
            <appender-ref ref="File-Appender"/>
        </root>
    </springProfile>
</configuration>